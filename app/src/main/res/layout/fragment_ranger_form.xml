<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.ranger_form.RangerFormFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/rangerFormTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:paddingVertical="8dp"
            android:text="Nuevo guardabosques" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ranger_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del guardabosques" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ranger_age_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edad del guardabosques" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ranger_tenure_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Antiguedad del guardabosques" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gender_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Genero: " />

            <CheckBox
                android:id="@+id/male_gender_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Masculino" />

            <CheckBox
                android:id="@+id/female_gender_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Femenino" />
        </LinearLayout>

        <Button
            android:id="@+id/register_ranger_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="Registrar" />

        <Button
            android:id="@+id/find_ranger_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="Buscar" />


        <Button
            android:id="@+id/edit_ranger_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="Editar" />


        <Button
            android:id="@+id/delete_ranger_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="Eliminar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>